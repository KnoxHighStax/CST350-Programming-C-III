@model MinesweeperGame.Models.GameBoardModel
@{
    ViewData["Title"] = "Start New Game";
}

<h2>Start New Minesweeper Game</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Home" asp-action="StartGame" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Size" class="form-label">Board Size</label>
                <select asp-for="Size" class="form-control">
                    <option value="8">8x8 (Easy)</option>
                    <option value="10" selected>10x10 (Medium)</option>
                    <option value="12">12x12 (Hard)</option>
                </select>
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Difficulty" class="control-label">Difficulty Level</label>
                <select asp-for="Difficulty" class="form-control">
                    <option value="Easy">Easy (10% Mines)</option>
                    <option value="Medium" selected>Medium (15% Mines)</option>
                    <option value="Hard">Hard (20% Mines)</option>
                </select>
                <span asp-validation-for="Difficulty" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Start Game" class="btn btn-primary" />
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
